{
    "dependencies": {
        "angular": "^1.6.4",
        "@uirouter/angularjs": "1.0.5",
        "angular-animate": "^1.6.4",
        "angular-aria": "^1.6.4",
        "angular-material": "^1.1.4",
        "angular-messages": "^1.6.4",
        "jquery": "^3.2.1",
        "angular-nvd3": "^1.0.9",
        "imagetracerjs": "^1.2.0",
        "browserify": "^14.4.0",
        "css-combine": "^1.0.0",
        "rimraf": "^2.6.1",
        "mkdir": "^0.0.2",
        "copyfiles": "^1.2.0"
    },
    "devDependencies": {
        "opener": "^1.4.3",
        "watchify": "^3.9.0",
        "watch-run": "^1.2.5",
        "http-server": "^0.10.0",
        "live-reload": "^1.1.0",
        "parallelshell": "^2.0.0"
    },
    "scripts": {
        "clean": "rimraf -r dist && rimraf -r dev",
        "serve": "http-server -p 1313 dev/",
        "live-reload": "live-reload --port 1717 dev/",

        "watch:js": "NODE_PATH='./local_modules' watchify --entry index.js --outfile dev/index.js",
        "watch:html": "watch-run -p 'index.html,local_modules/**/*.html' 'npm run copy:html'",
        "watch:css": "watch-run -p 'index.css,local_modules/**/*.css' 'npm run copy:css'",
        "watch": "parallelshell 'npm run watch:js' 'npm run watch:html' 'npm run watch:css'",


        "copy:html": "copyfiles -f index.html local_modules/**/*.html dev",
        "copy:css": "css-combine index.css > dev/index.css",
        "copy:assets": "copyfiles -f assets/**/*.* dev/assets",
        "copy": "npm run copy:css && npm run copy:html && npm run copy:assets",

        "open:dev": "opener http://localhost:1313",


        "predev": "npm run clean && mkdir dev && npm run copy",

        "dev": "npm run open:dev -s & parallelshell 'npm run live-reload -s' 'npm run serve -s' 'npm run watch -s'"


    }
}